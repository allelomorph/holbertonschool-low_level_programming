# -*- MakeFile -*-

CC = gcc  # compiler to be used
SRC = main.c holberton.c  # source .c files
OBJ = main.o holberton.o  # object files
NAME = holberton  # name of executable
RM = rm  # program to delete files

all: holberton

holberton: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c m.h
	$(CC) -c -o main.o main.c

holberton.o: holberton.c m.h
	$(CC) -c -o holberton.o holberton.c

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
