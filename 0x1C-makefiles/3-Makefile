# -*- MakeFile -*-

CC = gcc  # compiler to be used
SRC = main.c holberton.c  # source .c files
OBJ = $(SRC:.c=.o)  # object files
NAME = holberton  # name of executable
RM = rm -f  # program to delete files

all: holberton

holberton: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c m.h
	$(CC) -c -o main.o main.c

holberton.o: holberton.c m.h
	$(CC) -c -o holberton.o holberton.c

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
